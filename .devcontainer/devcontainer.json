{
  "name": "devcontainer-${localWorkspaceFolderBasename}",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Detroit}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--name",
    "devcontainer-${localWorkspaceFolderBasename}"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.formatting.provider": "ruff",
        "python.linting.flake8Enabled": false, // Disable flake8
        "python.linting.ruffEnabled": true, // Enable ruff
        // "python.testing.pytestEnabled": true,
        // "python.testing.unittestEnabled": false,
        "editor.formatOnSave": true,
        "notebook.formatOnSave.enabled": true,
        "notebook.codeActionsOnSave": {
          "notebook.source.fixAll": "explicit",
          "notebook.source.organizeImports": "explicit"
        },
        // "editor.defaultFormatter": "charliermarsh.ruff",
        "files.trimTrailingWhitespace": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "pn",

  // Mount secrets directly via mounts
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/pn/.claude,type=volume",
    // "source=~/secrets/google_api_key,target=/run/secrets/google_api_key,type=bind,readonly",
    // "source=~/secrets/gemini_api_key,target=/run/secrets/gemini_api_key,type=bind,readonly"
    // "source=~/secrets/next_public_r2r_default_email,target=/run/secrets/r2r_default_email,type=bind,readonly",
    // "source=~/secrets/next_public_r2r_default_password,target=/run/secrets/r2r_default_password,type=bind,readonly"
  ],

  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/pn/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "LANG": "en_US.UTF-8",
    "LANGUAGE": "en_US:en",
    // Environment variables for R2R
    // "R2R_PROJECT_NAME": "r2r_devcontainer",
    // "GOOGLE_API_KEY_FILE": "/run/secrets/google_api_key",
    // "GEMINI_API_KEY_FILE": "/run/secrets/gemini_api_key"
    // "NEXT_PUBLIC_R2R_DEFAULT_EMAIL_FILE": "/run/secrets/r2r_default_email",
    // "NEXT_PUBLIC_R2R_DEFAULT_PASSWORD_FILE": "/run/secrets/r2r_default_password",
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "sudo /usr/local/bin/init-firewall.sh"
}